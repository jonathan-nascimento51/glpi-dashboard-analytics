# GLPI Dashboard Analytics - Production Environment
# IMPORTANTE: Configure todas as variáveis antes de usar em produção

# GLPI Configuration
GLPI_API_URL=https://your-glpi-server.com/apirest.php
GLPI_APP_TOKEN=your_production_app_token_here
GLPI_USER_TOKEN=your_production_user_token_here
GLPI_TIMEOUT=30
GLPI_MAX_RETRIES=3

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=false
SECRET_KEY=your_very_secure_secret_key_here_change_this

# Redis Configuration
REDIS_URL=redis://:glpi_dashboard_redis_prod@redis:6379/0
REDIS_PASSWORD=glpi_dashboard_redis_prod

# Cache Configuration
CACHE_TYPE=redis
CACHE_TTL=300
CACHE_KEY_PREFIX=glpi_dashboard_prod

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/glpi_dashboard.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Performance Configuration
MAX_WORKERS=4
WORKER_TIMEOUT=30
KEEP_ALIVE=2

# Security Configuration
CORS_ORIGINS=https://your-domain.com
TRUST_PROXY_HEADERS=true

# Docker Configuration
HTTP_PORT=80
HTTPS_PORT=443

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30

# SSL Configuration (se usando HTTPS)
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem